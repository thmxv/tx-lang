# With explicit value
var a = "outer";
var b = if true { var a = "inner"; a };
std_println(b);  # expect: inner
std_println(a);  # expect: outer

var a = "outer";
var b = if false {} else { var a = "inner"; a };
std_println(b);  # expect: inner
std_println(a);  # expect: outer

# With implicit nil value
var a = "outer";
var b = if true { var a = "inner"; };
std_println(b);  # expect: nil
std_println(a);  # expect: outer

var a = "outer";
var b = if false {} else { var a = "inner"; };
std_println(b);  # expect: nil
std_println(a);  # expect: outer
