// NOTE: all _LONG opcodes must follow directly the non LONG version of the 
// same instruction
TX_OPCODE(CONSTANT,             1, 1)
TX_OPCODE(CONSTANT_LONG,        3, 1)
TX_OPCODE(NIL,                  0, 1)
TX_OPCODE(TRUE,                 0, 1)
TX_OPCODE(FALSE,                0, 1)
TX_OPCODE(POP,                  0, -1)
TX_OPCODE(GET_LOCAL,            1, 1)
TX_OPCODE(GET_LOCAL_LONG,       3, 1)
TX_OPCODE(SET_LOCAL,            1, 0)
TX_OPCODE(SET_LOCAL_LONG,       3, 0)
TX_OPCODE(GET_GLOBAL,           1, 1)
TX_OPCODE(GET_GLOBAL_LONG,      3, 1)
TX_OPCODE(SET_GLOBAL,           1, 0)
TX_OPCODE(SET_GLOBAL_LONG,      3, 0)
TX_OPCODE(DEFINE_GLOBAL,        1, -1)
TX_OPCODE(DEFINE_GLOBAL_LONG,   3, -1)
TX_OPCODE(EQUAL,                0, -1)
TX_OPCODE(NOT_EQUAL,            0, -1)
TX_OPCODE(GREATER,              0, -1)
TX_OPCODE(GREATER_EQUAL,        0, -1)
TX_OPCODE(LESS,                 0, -1)
TX_OPCODE(LESS_EQUAL,           0, -1)
TX_OPCODE(ADD,                  0, -1)
TX_OPCODE(SUBSTRACT,            0, -1)
TX_OPCODE(MULTIPLY,             0, -1)
TX_OPCODE(DIVIDE,               0, -1)
TX_OPCODE(NOT,                  0, 0)
TX_OPCODE(NEGATE,               0, 0)
TX_OPCODE(JUMP,                 2, 0)
TX_OPCODE(JUMP_IF_FALSE,        2, 0)
TX_OPCODE(LOOP,                 2, 0)
TX_OPCODE(CALL,                 1, 0) // 0 for tx fn's but for native fn it is the same as RETURN
TX_OPCODE(END_SCOPE,            1, 0) // Stack effect is in the operand
TX_OPCODE(END_SCOPE_LONG,       3, 0) // Stack effect is in the operand
TX_OPCODE(RETURN,               0, 0) // Stack effect is variable
TX_OPCODE(END,                  0, 0)
